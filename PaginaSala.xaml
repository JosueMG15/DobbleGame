<Page x:Class="DobbleGame.PaginaSala"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DobbleGame"
      xmlns:p="clr-namespace:DobbleGame.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="PaginaSala">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoPanalSala.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBox HorizontalAlignment="Left" Margin="42,714,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" Height="54" Background="#FFEDE193" TextChanged="TbChat" Name="tbChat"/>
        <Button Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="307,713,0,0" Background="Transparent"
                    Click="BtnEnviar_Mnesaje" Height="56">
            <Image Source="pack://application:,,,/Imagenes/enviarMensaje.png" Stretch="Uniform"/>
        </Button>

        <Button Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Background="Transparent"
                    Click="BtnRegresar_Click" Height="91">
            <Image Source="pack://application:,,,/Imagenes/BotonRegresar.png" Stretch="Uniform"/>
        </Button>
        <TextBox Name="tbContenedor" HorizontalAlignment="Left" Margin="42,400,0,0" VerticalAlignment="Top" Width="333"
                 Height="309" TextChanged="tbContenedor_TextChanged" TextWrapping="Wrap" IsReadOnly="True" />
    </Grid>

</Page>
