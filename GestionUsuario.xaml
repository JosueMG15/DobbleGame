<UserControl x:Class="DobbleGame.GestionUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DobbleGame"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="#EDE193">
            <Button Style="{StaticResource BotonPerfil}" VerticalAlignment="Top" Width="80" Height="80" Margin="25,40,10,0"
                    Click="BtnIrPerfil_Click" />
            <Label Content="KILLERESHAFSERT" VerticalAlignment="Top" Height="40" FontSize="20" FontWeight="SemiBold"  />
            <Button VerticalAlignment="Top" Width="80" Height="80" Background="Transparent"
                    Click="BtnCerrarSesion_Click">
                <Image Source="pack://application:,,,/Imagenes/BotonSalir.png" Stretch="Uniform"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
