<Window x:Class="DobbleGame.VentanaPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DobbleGame"
        mc:Ignorable="d"
        Title="VentanaPerfil" Height="800" Width="1600" WindowState="Maximized" WindowStyle="None" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoPanal.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid >
            <Button Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Background="Transparent"
                    Click="BtnRegresar_Click">
                <Image Source="pack://application:,,,/Imagenes/BotonRegresar.png" Stretch="Uniform"/>
            </Button>
            <Label Content="LABEL DE PRUEBA xd" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72"/>
        </Grid>
        <local:GestionUsuario Grid.Column="2"/>
    </Grid>

</Window>
