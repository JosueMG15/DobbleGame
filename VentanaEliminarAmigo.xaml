<Window x:Class="DobbleGame.VentanaEliminarAmigo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DobbleGame"
        xmlns:p="clr-namespace:DobbleGame.Properties"
        mc:Ignorable="d"
        Title="VentanaEliminarAmigo" Height="200" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border Background="#FFFBB8" CornerRadius="20">
        <Grid >
            <TextBlock x:Name="tbMensaje" Text="{x:Static p:Resources.lb_EliminarAmigo}" FontSize="15" TextWrapping="Wrap" FontWeight="Bold" Margin="46,67,46,111"/>
            <Button Width="100" Content="{x:Static p:Resources.global_Aceptar}" VerticalAlignment="Top" Margin="67,138,233,0" Background="#FFF12424" Foreground="White" Click="BtnAceptar_Click" Height="32"/>
            <Button Width="100" Content="{x:Static p:Resources.global_Cancelar}" VerticalAlignment="Top" Margin="233,138,67,0" Background="#FF959595" Foreground="White" Click="BtnCancelar_Click" Height="32"/>
        </Grid>
    </Border>
</Window>

