<Window x:Class="DobbleGame.VentanaErrorConexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DobbleGame"
        xmlns:p="clr-namespace:DobbleGame.Properties"
        mc:Ignorable="d"
        Title="VentanaErrorConexion" Height="200" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#FFFBB8" CornerRadius="20">
        <Grid >
            <StackPanel >
                <Label x:Name="lbTitulo" Style="{StaticResource Titulo2}" Content="" HorizontalAlignment="Left" Margin="30,30,0,0" FontSize="20" Foreground="Black"/>
                <TextBlock x:Name="tbMensaje" HorizontalAlignment="Left" Text="" Margin="30,0,30,10" FontSize="15" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
            <Button Width="100" Content="{x:Static p:Resources.global_Ok}" VerticalAlignment="Bottom" Margin="0,0,0,15" Background="#89F25C" Foreground="White" Click="BtnAceptar_Click"/>
        </Grid>
    </Border>
    
</Window>
