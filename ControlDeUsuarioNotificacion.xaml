<UserControl x:Class="DobbleGame.ControlDeUsuarioNotificacion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DobbleGame"
             mc:Ignorable="d" 
             xmlns:p="clr-namespace:DobbleGame.Properties"
             d:DesignHeight="100" d:DesignWidth="300" d:Background="Transparent">
    <Popup x:Name="Notificacion" Placement="Center"
       PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
       StaysOpen="False" AllowsTransparency="True" Width="300" Height="150" >
        <Border x:Name="PopupBorder" Padding="20" CornerRadius="25" Margin="20" Background="MediumVioletRed">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="10" Opacity="0.5" />
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="tbMensaje" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"
                           VerticalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Popup>
</UserControl>
